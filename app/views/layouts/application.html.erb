<!DOCTYPE html>
<html>
<head>
  <title>Hackerboard</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	
<h1>Hackerboard</h1>

<p>
	<%= link_to t("menu.signup"), signup_path %>
</p>

<% flash.each do |type, message| %>
	<p class="<%= type %> message"><%= message %></p>
<% end %>
	
<%= yield %>

</body>
</html>
