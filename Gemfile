gem "rails-i18n"

group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'therubyracer', :platforms => :ruby
  gem 'uglifier'
end

group :development, :test do
  gem "rspec-rails"
  gem "pry"
  gem "awesome_print"
 end

group :test do
   gem "capybara"
end
